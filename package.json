{
  "name": "faithmasters",
  "version": "1.0.0",
  "description": "Production-ready interfaith discussion platform",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "migrate": "node backend/migrations/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint backend/ frontend/assets/js/",
    "lint:fix": "eslint backend/ frontend/assets/js/ --fix",
    "build": "npm run lint && npm test",
    "seed": "node backend/utils/seed.js",
    "reset-db": "rm -f backend/faithmasters.sqlite && npm run migrate && npm run seed"
  },
  "keywords": [
    "interfaith",
    "discussion",
    "platform",
    "religious",
    "dialogue"
  ],
  "author": "FaithMasters Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.13",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/faithmasters/platform.git"
  },
  "bugs": {
    "url": "https://github.com/faithmasters/platform/issues"
  },
  "homepage": "https://faithmasters.org"
}
